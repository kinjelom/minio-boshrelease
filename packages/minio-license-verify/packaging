#!/usr/bin/env bash

set -eux

source /var/vcap/packages/golang-*-linux/bosh/compile.env
mkdir -p ${BOSH_INSTALL_TARGET}/bin
export GOBIN=${BOSH_INSTALL_TARGET}/bin

pushd minio-license-verify
  go build -o minio-license-verify
  mv ./minio-license-verify ${BOSH_INSTALL_TARGET}/bin
  chmod +x ${BOSH_INSTALL_TARGET}/bin/minio-license-verify
popd


